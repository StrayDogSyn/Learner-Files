# Environment Configuration for API Integration Layer
# Copy this file to .env and fill in your actual API keys and endpoints

# ================================
# GitHub Configuration
# ================================
# Get your token from: https://github.com/settings/tokens
# Permissions needed: public_repo, read:user
REACT_APP_GITHUB_TOKEN=your_github_personal_access_token_here
VITE_GITHUB_TOKEN=your_github_personal_access_token_here

# ================================
# Claude AI Configuration  
# ================================
# Get your API key from: https://console.anthropic.com/
REACT_APP_CLAUDE_ENDPOINT=https://api.anthropic.com/v1/messages
VITE_CLAUDE_ENDPOINT=https://api.anthropic.com/v1/messages
REACT_APP_CLAUDE_KEY=your_claude_api_key_here
VITE_CLAUDE_KEY=your_claude_api_key_here

# ================================
# Analytics Configuration
# ================================
# Your custom analytics endpoint or third-party service
REACT_APP_ANALYTICS_ENDPOINT=/api/analytics
VITE_ANALYTICS_ENDPOINT=/api/analytics

# ================================
# Weather API Configuration
# ================================
# Get your API key from: https://openweathermap.org/api
REACT_APP_WEATHER_API_KEY=your_openweather_api_key_here
VITE_WEATHER_API_KEY=your_openweather_api_key_here

# ================================
# Email Service Configuration
# ================================
# Default sender email address
REACT_APP_DEFAULT_FROM_EMAIL=noreply@yourdomain.com
VITE_DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ================================
# Development Settings
# ================================
NODE_ENV=development

# ================================
# Optional: Additional Service URLs
# ================================
# If you're using custom endpoints for different environments
REACT_APP_API_BASE_URL=http://localhost:3001
VITE_API_BASE_URL=http://localhost:3001

# ================================
# Security Settings
# ================================
# Enable/disable certain features in production
REACT_APP_ENABLE_ANALYTICS=true
VITE_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_ERROR_REPORTING=true
